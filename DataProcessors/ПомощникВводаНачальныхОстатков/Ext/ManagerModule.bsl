#Область ТекущиеДела

// Заполняет список текущих дел пользователя.
// Описание параметров процедуры см. в ТекущиеДелаСлужебный.НоваяТаблицаТекущихДел()
//
Процедура ПриЗаполненииСпискаТекущихДел(ТекущиеДела) Экспорт
	
	ИдентификаторДела = "ВводНачальныхОстатков";
	
	Если Константы.ПервоначальнаяНастройкаЗаполненыНачальныеОстатки.Получить()
		Или Не ПравоДоступа("Использование", Метаданные.Обработки.ПомощникВводаНачальныхОстатков)
		Или Не ПравоДоступа("Редактирование", Метаданные.Документы.ВводНачальныхОстатков)
		Или ТекущиеДелаСервер.ДелоОтключено(ИдентификаторДела) Тогда
		
		Возврат;
	КонецЕсли;
	
	Дело = ТекущиеДела.Добавить();
	Дело.Идентификатор	 = ИдентификаторДела;
	Дело.ЕстьДела		= Истина;
	Дело.Важное			= Истина;
	Дело.Представление	= НСтр("ru = 'Ввести начальные остатки'");
	Дело.Количество		= 0;
	Дело.Форма			= "Обработка.ПомощникВводаНачальныхОстатков.Форма.ФормаВводаОстатков";
	Дело.ПараметрыФормы	= Новый Структура;
	Дело.Владелец		= НСтр("ru='Начало работы'");
	Дело.Подсказка		= "";
	
КонецПроцедуры

#КонецОбласти

#КонецЕсли