			Запись.ИдентификаторТарификации = Запись.РегистрационныйНомер;
			Модифицированность = Истина;
			ЗаписатьЗапись();
		КонецЕсли;
		
	Иначе
		Результат = ТарификацияПереопределяемый.ОтменаРегистрацииКассыНаСервереТарификации(Запись.ИдентификаторТарификации);
		Если Результат Тогда
			ТекстСообщения = СтрШаблон(НСтр("ru = 'Освобождена лицензия %1 на сервере лицензий'"), Запись.ИдентификаторТарификации);
			ОбменСКассовымСерверомШтрихМ.ЗаписатьВПротоколКассовогоАппарата(Запись.РегистрационныйНомер, ТекстСообщения);
			Запись.ИдентификаторТарификации = "";
			Модифицированность = Истина;
			ЗаписатьЗапись();
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат Результат;
