		Иначе
			Элементы.СтраницыПодключения.ТекущаяСтраница = Элементы.СтраницаПодключения;
		КонецЕсли;
	Иначе
		Элементы.СтраницыПодключения.ТекущаяСтраница = Элементы.СтраницаПодключения;
	КонецЕсли;
	
