		ЦенаДляКарзины = Элемент.ТекущиеДанные.Цена;
		ИзменитьТоварВКорзине(СтрокаСпискаТоваров, Элемент.ТекущиеДанные, , 1, ЦенаДляКарзины);
		
	КонецЕсли;
	
КонецПроцедуры // СписокХарактеристикВыбор()

