// Процедура - обработчик действия УстановитьПометкуУдаления.
//
Процедура УстановитьПометкуУдаления(Кнопка)
	
	ТекущиеДанныеСтроки = Элементы.ДеревоДокументов.ТекущиеДанные;
	Если ТекущиеДанныеСтроки = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Попытка
		
		Результат = УстановитьПометкуУдаленияСервер(ТекущиеДанныеСтроки.Ссылка);
		ТекущиеДанныеСтроки.ПометкаУдаления = Результат.ПометкаУдаления;
		ТекущиеДанныеСтроки.Проведен		= Результат.Проведен;
		ТекущиеДанныеСтроки.Картинка		= НомерКартинки(ТекущиеДанныеСтроки);
		ОбновитьДоступностьКнопок();
		
	Исключение
		
		Сообщение = Новый СообщениеПользователю();
		Сообщение.Текст = НСтр("ru = 'Не удалось установить пометку удаления на документ %Документ%!'");;
		Сообщение.Текст = СтрЗаменить(Сообщение.Текст, "%Документ%", ТекущиеДанныеСтроки.ДокументПредставление);
		Сообщение.Сообщить();
		
	КонецПопытки;
	
КонецПроцедуры

