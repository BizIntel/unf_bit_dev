	Объект.СуммаНДС = ?(Объект.СуммаВключаетНДС, 
							Объект.Сумма - (Объект.Сумма) / ((СтавкаНДС + 100) / 100),
							Объект.Сумма * СтавкаНДС / 100);		
		
	Объект.Всего = Объект.Сумма + ?(Объект.СуммаВключаетНДС, 0, Объект.СуммаНДС);
	
