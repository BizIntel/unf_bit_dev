			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(СтрокаСообщения);
		Иначе
			Объект.ПереданВЕГАИС = Истина;
			Модифицированность = Истина;
		КонецЕсли;
		
		Записать(Новый Структура("РежимЗаписи", РежимЗаписиДокумента.Запись));
		
		УстановитьДоступностьЭлементовЕГАИС();
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура ПодготовитьТТН(ДокументСсылка, Отказ)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	КлассификаторОрганизацийЕГАИС.Ссылка КАК ОрганизацияЕГАИС,
	|	НастройкиОбменаЕГАИС.Организация,
	|	НастройкиОбменаЕГАИС.ТорговаяТочка
	|ПОМЕСТИТЬ Вт_ОрганизацииЕГАИС
	|ИЗ
	|	РегистрСведений.НастройкиОбменаЕГАИС КАК НастройкиОбменаЕГАИС
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлассификаторОрганизацийЕГАИС КАК КлассификаторОрганизацийЕГАИС
	|		ПО НастройкиОбменаЕГАИС.ИдентификаторФСРАР = КлассификаторОрганизацийЕГАИС.Код
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	РасходнаяНакладная.Номер КАК Номер,
	|	РасходнаяНакладная.Дата КАК Дата,
	|	СоответствиеКонтрагентаОрганизацииЕГАИС.ОрганизацияЕГАИС КАК Грузополучатель,
	|	РасходнаяНакладная.ВидОперации,
	|	Вт_ОрганизацииЕГАИС.ОрганизацияЕГАИС
	|ИЗ
	|	Документ.РасходнаяНакладная КАК РасходнаяНакладная
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.СоответствиеОрганизацийЕГАИС КАК СоответствиеКонтрагентаОрганизацииЕГАИС
	|		ПО РасходнаяНакладная.Контрагент = СоответствиеКонтрагентаОрганизацииЕГАИС.Контрагент
	|		ЛЕВОЕ СОЕДИНЕНИЕ Вт_ОрганизацииЕГАИС КАК Вт_ОрганизацииЕГАИС
	|		ПО РасходнаяНакладная.Организация = Вт_ОрганизацииЕГАИС.Организация
	|			И РасходнаяНакладная.СтруктурнаяЕдиница = Вт_ОрганизацииЕГАИС.ТорговаяТочка
	|ГДЕ
	|	РасходнаяНакладная.Ссылка = &Ссылка
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	Товары.НомерСтроки КАК НомерСтроки,
	|	ЕСТЬNULL(Товары.Номенклатура.АлкогольнаяПродукция, ЛОЖЬ) КАК АлкогольнаяПродукция,
	|	Товары.СправкаБ.АлкогольнаяПродукция КАК АлкогольнаяПродукцияСправкиБ,
	|	СправкиАЕГАИС.Ссылка КАК СправкаА,
	|	Товары.СправкаБ КАК СправкаБ,
	|	Товары.Количество КАК Количество,
	|	Товары.Цена КАК Цена,
	|	Товары.Всего КАК Сумма,
	|	Товары.СправкаБ.НомерСправкиА КАК НомерСправкиА
	|ИЗ
	|	Документ.РасходнаяНакладная.Запасы КАК Товары
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.СправкиАЕГАИС КАК СправкиАЕГАИС
	|		ПО Товары.СправкаБ.НомерСправкиА = СправкиАЕГАИС.РегистрационныйНомер
	|ГДЕ
	|	Товары.Ссылка = &Ссылка
	|	И ЕСТЬNULL(Товары.Номенклатура.АлкогольнаяПродукция, ЛОЖЬ)
	|
	|УПОРЯДОЧИТЬ ПО
	|	НомерСтроки";
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	Результат = Запрос.ВыполнитьПакет();
	ВыборкаДокумент = Результат[1].Выбрать();
	ВыборкаТовары = Результат[2].Выбрать();
	Если ВыборкаДокумент.Следующий() Тогда
		
		Если НЕ ЗначениеЗаполнено(ВыборкаДокумент.Грузополучатель) Тогда
			Отказ = Истина;
			СтрокаОшибки = НСтр("ru = 'Не удалось определить соответствие контрагента классификатору ЕГАИС.'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				СтрокаОшибки,
				ДокументСсылка,
				"Объект.Контрагент");
		КонецЕсли;
		Если НЕ ЗначениеЗаполнено(ВыборкаДокумент.ОрганизацияЕГАИС) Тогда
			Отказ = Истина;
			СтрокаОшибки = НСтр("ru = 'Не удалось определить соответствие организации классификатору ЕГАИС.'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				СтрокаОшибки,
				ДокументСсылка,
				"Объект.Организация");
		КонецЕсли;
		
		КоличествоСтрок = ВыборкаТовары.Количество();
		Если КоличествоСтрок = 0 Тогда
			Отказ = Истина;
			СтрокаОшибки = НСтр("ru = 'Не удалось определить соответствие алкогольной продукции по классификатору ЕГАИС.'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				СтрокаОшибки,
				ДокументСсылка,
				"Объект.Запасы");
		КонецЕсли;
		
		// Товары.
		Пока ВыборкаТовары.Следующий() Цикл
			
			Если Не ЗначениеЗаполнено(ВыборкаТовары.НомерСправкиА) Тогда
				Отказ = Истина;
				СтрокаОшибки = НСтр("ru = 'В строке %1 в справке Б не заполнен номер справки А.'");
				СтрокаОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(СтрокаОшибки, ВыборкаТовары.НомерСтроки);
				ИмяПоляТоваров = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Объект.Запасы", ВыборкаТовары.НомерСтроки, "СправкаБ");
				ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
					СтрокаОшибки,
					ДокументСсылка,
					ИмяПоляТоваров);
			КонецЕсли;
			
			Если ЗначениеЗаполнено(ВыборкаТовары.СправкаБ) Тогда
				Если НЕ ЗначениеЗаполнено(ВыборкаТовары.АлкогольнаяПродукцияСправкиБ)
					И ЗначениеЗаполнено(ВыборкаТовары.СправкаБ) Тогда
					Отказ = Истина;
					СтрокаОшибки = НСтр("ru = 'В строке %1 не заполнена алкогольная продукция в справке Б.'");
					СтрокаОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(СтрокаОшибки, ВыборкаТовары.НомерСтроки);
					ИмяПоляТоваров = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Объект.Запасы", ВыборкаТовары.НомерСтроки, "СправкаБ");
					ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
						СтрокаОшибки,
						ДокументСсылка,
						ИмяПоляТоваров);
				КонецЕсли;
			Иначе
				Отказ = Истина;
				СтрокаОшибки = НСтр("ru = 'В строке %1 не заполнена справка Б.'");
				СтрокаОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(СтрокаОшибки, ВыборкаТовары.НомерСтроки);
				ИмяПоляТоваров = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Объект.Запасы", ВыборкаТовары.НомерСтроки, "СправкаБ");
				ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
					СтрокаОшибки,
					ДокументСсылка,
					ИмяПоляТоваров);
			КонецЕсли;
			
		КонецЦикла;
		
		Если Отказ Тогда
			Возврат;
		КонецЕсли;
		
		ДанныеТТН = Новый Структура;
		ДанныеТТН.Вставить("ВыборкаДокумент", ВыборкаДокумент);
		ДанныеТТН.Вставить("ВыборкаТовары", ВыборкаТовары);
		
		ПодготовленнаяТТН = ИнтеграцияЕГАИСУНФ.СформироватьТТНПоДаннымДокумента(Объект.Ссылка, ДанныеТТН);
		Если Не ЗначениеЗаполнено(ПодготовленнаяТТН) Тогда
			Отказ = Истина;
			Возврат;
		КонецЕсли;
		
		Объект.ТоварноТранспортнаяНакладнаяЕГАИС = ПодготовленнаяТТН;
		
	КонецЕсли;

КонецПроцедуры

