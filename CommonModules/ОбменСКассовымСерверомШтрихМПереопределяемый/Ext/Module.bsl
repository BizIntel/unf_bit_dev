	НоменклатураОбъект.Наименование = Наименование;
	НоменклатураОбъект.НаименованиеПолное = НСтр("ru='Товар с кодом '") + Артикул;
	НоменклатураОбъект.СтавкаНДС = Справочники.СтавкиНДС.НайтиПоНаименованию("18%",Истина);
