	КонецЕсли;
	
	Номенклатура = Справочники.Номенклатура.НайтиПоКоду(Артикул);
	
	Если НЕ Номенклатура.Пустая() Тогда
		Возврат Номенклатура;
	КонецЕсли;
	
	Номенклатура = Справочники.Номенклатура.НайтиПоНаименованию(Наименование);
	
	Если НЕ Номенклатура.Пустая() Тогда
