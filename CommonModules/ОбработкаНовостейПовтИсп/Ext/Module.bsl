		Результат.Вставить("ТекущийПользовательСсылка", ПользователиКлиентСервер.ТекущийПользователь());
		// Если надо будет получать ссылку на внешнего пользователя, то вставить Пользователи.АвторизованныйПользователь().
		// На текущий момент внешние пользователи новости не получают.
	КонецЕсли;

	ФиксированныйРезультат = Новый ФиксированнаяСтруктура(Результат);

