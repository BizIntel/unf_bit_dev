//  Число - значение разделителя.
//
Функция ЗначениеРазделителя(КодОбластиДанных)
	
	УстановитьПривилегированныйРежим(Истина);
	Если ТехнологияСервисаИнтеграцияСБСП.ИспользованиеРазделителяСеанса() Тогда
		Возврат ТехнологияСервисаИнтеграцияСБСП.ЗначениеРазделителяСеанса();
	Иначе
		Если Не ЗначениеЗаполнено(КодОбластиданных) Тогда
			ВызватьИсключение НСтр("Для получения данных в неразделенном сеансе не указан код области данных");
		Иначе
			Возврат КодОбластиДанных;
		КонецЕсли;
	КонецЕсли;
	
КонецФункции

// Устанавливает разделитель сеанса.
//
// Параметры:
//  КодОбластиДанных - Число - код области данных.
//
Процедура УстановитьРазделительСеанса(КодОбластиДанных)
	
	Если КодОбластиДанных = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если ТехнологияСервисаИнтеграцияСБСП.ИспользованиеРазделителяСеанса() Тогда
		Возврат;
	КонецЕсли;
	
	ТехнологияСервисаИнтеграцияСБСП.УстановитьРазделениеСеанса(Истина, КодОбластиДанных);
	
КонецПроцедуры

