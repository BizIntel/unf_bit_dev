							КонецЦикла;
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
				
			НаборЗаписей.Записать(Истина);

			ОблачныйАрхивКлиентСервер.ЗарегистрироватьКонецШагаВыполнения(
