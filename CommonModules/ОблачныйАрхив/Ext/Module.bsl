			СтрШаблон(НСтр("ru='Загрузка информации из приватного веб-сервиса (%1)'"), "getFileList"));

			Попытка
				Результат = Прокси.getFileList(
					КонтекстВыполненияВложенный.КлючАвторизации, // authKey
					""); // UIDName - если пустая строка, то для всех ИБ.
				ОписаниеРезультата = Символы.ПС + ИнтернетПоддержкаПользователейКлиентСервер.ПредставлениеОбъектаХДТО(Результат, Прокси.ФабрикаXDTO);
