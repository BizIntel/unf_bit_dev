			КонтекстВыполнения.КодРезультата = ШагВыполненияВложенный.КодРезультата;

		КонецЕсли;

#КонецОбласти

	Иначе

		Результат = НастройкиАгентаКопированияКлиент;
		КонтекстВыполнения.КодРезультата = 122;

	КонецЕсли;

	#Иначе

