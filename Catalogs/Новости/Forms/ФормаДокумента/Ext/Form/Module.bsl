	//НоваяСтрокаДействие.ЕдинственноеЗначениеПараметра = ТекущееДействиеХДТО.;
	//НоваяСтрокаДействие.КоличествоПараметров          = ТекущееДействиеХДТО.;

	// Список параметров действий actions1C/action1C/parametersList/parameter
	СвойствоПараметры  = ДействиеХДТО.Свойства().Получить("parametersList");
	Если СвойствоПараметры <> Неопределено Тогда
		ПараметрыХДТО = ДействиеХДТО.Получить("parametersList");
		СвойствоСписокПараметров = ПараметрыХДТО.Свойства().Получить("parameter");
		Если СвойствоСписокПараметров <> Неопределено Тогда
			// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
			// Проверить можно только по свойству ВерхняяГраница.
			Если СвойствоСписокПараметров.ВерхняяГраница = 1 Тогда
				ТекущийПараметрДействияХДТО = ПараметрыХДТО.Получить(СвойствоСписокПараметров);
				ИмпортОбъектаИзXMLНаСервере_Действие_Параметр(ДействиеХДТО, ТекущийПараметрДействияХДТО);
			ИначеЕсли (СвойствоСписокПараметров.ВерхняяГраница = -1)
					ИЛИ (СвойствоСписокПараметров.ВерхняяГраница > 1) Тогда
				СписокПараметровДействийХДТО = ПараметрыХДТО.ПолучитьСписок(СвойствоСписокПараметров);
				Для каждого ТекущийПараметрДействияХДТО Из СписокПараметровДействийХДТО Цикл
					ИмпортОбъектаИзXMLНаСервере_Действие_Параметр(ДействиеХДТО, ТекущийПараметрДействияХДТО);
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;

