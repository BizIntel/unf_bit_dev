// Функция преобразует данные документа в ХДТО типа {http://v8.1c.ru/news1c/wsTypes}newsType_ModelBaseExchange.
// В отличие от ОбработкаНовостейСервер.ПолучитьНовость_ХДТО, данные
//  НЕ получаются из регистров сведений (т.к. документ может быть еще не записан).
//
// Параметры:
//  Нет.
//
// Возвращаемое значение:
//    Строка - строковое представление значения типа {http://v8.1c.ru/news1c/wsTypes}newsType_ModelBaseExchange.
//
Функция ПолучитьПредставлениеНовостиXML()

	ДляЭталоннойБазы             = Истина;
	ЗаменятьПереводыСтрокНаТэгBR = Ложь;
	ЗаменятьТекстВнешний         = Ложь;
	ФабрикаХДТО = ФабрикаXDTO;

	ОбъектХДТО = ФабрикаХДТО.Создать(ФабрикаХДТО.Тип("http://v8.1c.ru/news1c/wsTypes", "newsType_ModelBaseExchange"));

	// Возможно, в УИННовости хранится не идентификатор, а ссылка на новость (как принято в сторонних программах).
	УИННовостиЛокальный = Объект.УИННовости;
	Если СтрДлина(УИННовостиЛокальный) <> 36 Тогда
		Попытка
			ОбъектХДТО.guid = УИННовостиЛокальный; // должно быть ровно 36 символов
		Исключение
			ИнформацияОбОшибке = ИнформацияОбОшибке();
			ОбъектХДТО.guid = Строка(Новый УникальныйИдентификатор);
		КонецПопытки;
	Иначе
		ОбъектХДТО.guid = Строка(Новый УникальныйИдентификатор);
	КонецЕсли;
	// Дата публикации имеет смысл только вместе с каналом распространения новостей.
	// Брать ее надо из регистра накопления СостояниеПубликацииНовостей или ОтчетОбОтправкеНовостей.
	// Узнать ее можно с помощью веб-сервиса News.getNewsStatusList
	// Но для выгрузки новости методом putNews можно заполнить ее датой изменения.

	// title - Обязательное поле длиной не менее 1 символа.
	ЗаголовокНовостиЛокальный = СокрЛП(СтрЗаменить(Объект.Наименование, "  ", " "));
	Если ПустаяСтрока(ЗаголовокНовостиЛокальный) Тогда
		ЗаголовокНовостиЛокальный = НСтр("ru='Заголовок новости'");
	КонецЕсли;

	ОбъектХДТО.publishDate      = УниверсальноеВремя(ЭтотОбъект.ДатаПубликацииМестная, ЧасовойПояс());
	ОбъектХДТО.expireDate       = УниверсальноеВремя(ЭтотОбъект.ДатаЗавершенияМестная, ЧасовойПояс()); // Необязательное
	ОбъектХДТО.title            = ЗаголовокНовостиЛокальный;
	ОбъектХДТО.subtitle         = СокрЛП(СтрЗаменить(Объект.Подзаголовок, "  ", " ")); // Необязательное
	ОбъектХДТО.link             = СокрЛП(СтрЗаменить(Объект.СсылкаНаПолныйТекстНовости, "  ", " ")); // Необязательное
	ОбъектХДТО.hideInList       = Объект.СкрыватьВОбщемСпискеНовостей; // Необязательное
	ОбъектХДТО.priority         = Объект.Важность; // Необязательное
	ОбъектХДТО.priorityExpired  = УниверсальноеВремя(ЭтотОбъект.ДатаСбросаВажностиМестная, ЧасовойПояс()); // Необязательное
	ОбъектХДТО.autoMarkAsRead   = Объект.АвтоСбросНапоминанияПриПрочтении; // Необязательное
	ОбъектХДТО.autoOpenLink     = Объект.ПриОткрытииСразуПереходитьПоСсылке; // Необязательное
	ОбъектХДТО.DeletionMark     = Объект.ПометкаУдаления;
	// Текст должен передаваться в любом случае. Если заполнен только один из текстов (для 1С, для внешних источников),
	//  то другой текст установить таким же. Это будет сделано дальше в коде.
	ОбъектХДТО.content          = СокрЛП(Объект.ТекстНовостиДляВнешнихИсточников); // Текст новости для внешних источников.
	ОбъектХДТО.content1C        = СокрЛП(Объект.ТекстНовости); // Текст новости 1С.
	ОбъектХДТО.comment          = "";
	ОбъектХДТО.isDraft          = Ложь;

	// Должны быть заполнены оба текста новости - и для внешних источников и для 1С.
	//  Если какой-то текст не заполнен, то взять из другого поля.
	Если ПустаяСтрока(ОбъектХДТО.content) Тогда
		ОбъектХДТО.content = ОбъектХДТО.content1C;
	КонецЕсли;
	Если ПустаяСтрока(ОбъектХДТО.content1C) Тогда
		ОбъектХДТО.content1C = ОбъектХДТО.content;
	КонецЕсли;

	// В клиентской базе нет понятия "ТематическаяПодборка".
	ТематическаяПодборка_ХДТО = ФабрикаХДТО.Создать(ФабрикаХДТО.Тип("http://v8.1c.ru/news1c/wsTypes", "relatedChannelsSetRefType"), Неопределено);
	ТематическаяПодборка_ХДТО.guid = Строка(Новый УникальныйИдентификатор);
	ТематическаяПодборка_ХДТО.Code = "NotUsedInClientBase";
	ОбъектХДТО.relatedChannelsSetRef = ТематическаяПодборка_ХДТО;

	// Табличные части:
	//   Действия
	//   ПараметрыДействий
	Если Объект.Действия.Количество() > 0 Тогда
		// Все необходимые свойства ХДТО
		СвойствоДействия  = ОбъектХДТО.Свойства().Получить("actions1C");
		СвойствоДействие  = СвойствоДействия.Тип.Свойства.Получить("action1C");
		СвойствоПараметры = СвойствоДействие.Тип.Свойства.Получить("parametersList");
		СвойствоПараметр  = СвойствоПараметры.Тип.Свойства.Получить("parameter");
		// Список действий actions1C/action1C
		ОбъектХДТО.Установить(СвойствоДействия, ФабрикаХДТО.Создать(СвойствоДействия.Тип));
		СписокДействий = ОбъектХДТО.actions1C.ПолучитьСписок(СвойствоДействие);
		Для каждого ТекущееДействие Из Объект.Действия Цикл
			ОбъектХДТО_Действие = ФабрикаХДТО.Создать(СвойствоДействие.Тип);
			ОбъектХДТО_Действие.actionID = ТекущееДействие.УИНДействия;
			ОбъектХДТО_Действие.action   = ТекущееДействие.Действие;
			// Список параметров действий actions1C/action1C/parametersList/parameter
			МассивПараметров = Объект.ПараметрыДействий.НайтиСтроки(Новый Структура("УИНДействия", ТекущееДействие.УИНДействия));
			Если МассивПараметров.Количество() > 0 Тогда
				ОбъектХДТО_Действие.Установить(СвойствоПараметры, ФабрикаХДТО.Создать(СвойствоПараметры.Тип));
				СписокПараметров = ОбъектХДТО_Действие.parametersList.ПолучитьСписок(СвойствоПараметр);
				Для каждого ТекущийПараметр Из МассивПараметров Цикл
					ОбъектХДТО_Параметр = ФабрикаХДТО.Создать(СвойствоПараметр.Тип);
					ОбъектХДТО_Параметр.name  = ТекущийПараметр.Параметр;
					ОбъектХДТО_Параметр.value = ТекущийПараметр.ЗначениеПараметра;
					СписокПараметров.Добавить(ОбъектХДТО_Параметр);
				КонецЦикла;
			КонецЕсли;
			СписокДействий.Добавить(ОбъектХДТО_Действие);
		КонецЦикла;
	КонецЕсли;

	//   БинарныеДанные
	Если Объект.БинарныеДанные.Количество() > 0 Тогда
		// Все необходимые свойства ХДТО
		СвойствоДанныеСписок = ОбъектХДТО.Свойства().Получить("binaryDataList1C");
		СвойствоДанныеОбъект = СвойствоДанныеСписок.Тип.Свойства.Получить("binaryData1C");
		// Список привязок metadataLinks1C/metadataLink1C
		ОбъектХДТО.Установить(СвойствоДанныеСписок, ФабрикаХДТО.Создать(СвойствоДанныеСписок.Тип));
		СписокДанных = ОбъектХДТО.binaryDataList1C.ПолучитьСписок(СвойствоДанныеОбъект);
		Для каждого ТекущиеДанные Из Объект.БинарныеДанные Цикл
			ОбъектХДТО_Данные = ФабрикаХДТО.Создать(СвойствоДанныеОбъект.Тип);
			ОбъектХДТО_Данные.id         = СокрЛП(СтрЗаменить(ТекущиеДанные.УИН, "  ", " "));
			ОбъектХДТО_Данные.title      = СокрЛП(СтрЗаменить(ТекущиеДанные.Заголовок, "  ", " "));
			ОбъектХДТО_Данные.binaryData = ТекущиеДанные.ДанныеСтрока64;
			ОбъектХДТО_Данные.link       = СокрЛП(СтрЗаменить(ТекущиеДанные.ИнтернетСсылка, "  ", " "));
			ОбъектХДТО_Данные.order      = ТекущиеДанные.НомерСтроки;
			СписокДанных.Добавить(ОбъектХДТО_Данные);
		КонецЦикла;
	КонецЕсли;

	//   ПривязкаКМетаданным
	Если Объект.ПривязкаКМетаданным.Количество() > 0 Тогда
		// Все необходимые свойства ХДТО
		СвойствоПривязки  = ОбъектХДТО.Свойства().Получить("metadataLinks1C");
		СвойствоПривязка  = СвойствоПривязки.Тип.Свойства.Получить("metadataLink1C");
		// Список привязок metadataLinks1C/metadataLink1C
		ОбъектХДТО.Установить(СвойствоПривязки, ФабрикаХДТО.Создать(СвойствоПривязки.Тип));
		СписокПривязок = ОбъектХДТО.metadataLinks1C.ПолучитьСписок(СвойствоПривязка);
		Для каждого ТекущаяПривязка Из Объект.ПривязкаКМетаданным Цикл
			ОбъектХДТО_Привязка = ФабрикаХДТО.Создать(СвойствоПривязка.Тип);
			ОбъектХДТО_Привязка.metadataName        = СокрЛП(СтрЗаменить(ТекущаяПривязка.Метаданные, "  ", " "));
			ОбъектХДТО_Привязка.formName            = СокрЛП(СтрЗаменить(ТекущаяПривязка.Форма, "  ", " "));
			ОбъектХДТО_Привязка.eventName           = СокрЛП(СтрЗаменить(ТекущаяПривязка.Событие, "  ", " "));
			ОбъектХДТО_Привязка.openWithinOwnerForm = ТекущаяПривязка.ПоказыватьВФормеОбъекта;
			ОбъектХДТО_Привязка.priority            = ТекущаяПривязка.Важность;
			// Дата сброса важности изначально редактируется в местном времени и приводится к универсальному в момент записи.
			ОбъектХДТО_Привязка.priorityExpired     = УниверсальноеВремя(ТекущаяПривязка.ДатаСбросаВажностиМестная, ЧасовойПояс());
			ОбъектХДТО_Привязка.isPinned            = ТекущаяПривязка.ЭтоПостояннаяНовость;
			СписокПривязок.Добавить(ОбъектХДТО_Привязка);
		КонецЦикла;
	КонецЕсли;

	//   КатегорииНовостей (простые условия)
	Если ЭтотОбъект.КатегорииПростые.Количество() > 0 Тогда
		// Все необходимые свойства ХДТО
		// Простые категории
		СвойствоКатегории = ОбъектХДТО.Свойства().Получить("categories1C");
		СвойствоКатегория = СвойствоКатегории.Тип.Свойства.Получить("category1C");
		// Список категорий categories1C/category1C
		ОбъектХДТО.Установить(СвойствоКатегории, ФабрикаХДТО.Создать(СвойствоКатегории.Тип));
		СписокКатегорий_ПростоеУсловие = ОбъектХДТО.categories1C.ПолучитьСписок(СвойствоКатегория);
		Для каждого ТекущаяКатегория Из ЭтотОбъект.КатегорииПростые Цикл
			// Список простых категорий
			ОбъектХДТО_Категория_Простая = ФабрикаХДТО.Создать(СвойствоКатегория.Тип);
			ОбъектХДТО_Категория_Простая.categoryGuid = Строка(ТекущаяКатегория.КатегорияНовостей.УникальныйИдентификатор());
			ОбъектХДТО_Категория_Простая.categoryCode = СокрЛП(СтрЗаменить(ТекущаяКатегория.КатегорияНовостей.Код, "  ", " ")); // Код не должен быть пустой.
			Если ТипЗнч(ТекущаяКатегория.ЗначениеКатегорииНовостей) = Тип("Число") Тогда
				ОбъектХДТО_Категория_Простая.categoryValue = XMLСтрока(ТекущаяКатегория.ЗначениеКатегорииНовостей);
			ИначеЕсли ТипЗнч(ТекущаяКатегория.ЗначениеКатегорииНовостей) = Тип("Дата") Тогда
				ОбъектХДТО_Категория_Простая.categoryValue = ТекущаяКатегория.ЗначениеКатегорииНовостей; // Значение уже типа Дата, еще раз преобразовывать не надо
			ИначеЕсли ТипЗнч(ТекущаяКатегория.ЗначениеКатегорииНовостей) = Тип("Строка") Тогда
				ОбъектХДТО_Категория_Простая.categoryValue = ТекущаяКатегория.ЗначениеКатегорииНовостей;
			ИначеЕсли ТипЗнч(ТекущаяКатегория.ЗначениеКатегорииНовостей) = Тип("Булево") Тогда
				ОбъектХДТО_Категория_Простая.categoryValue = XMLСтрока(ТекущаяКатегория.ЗначениеКатегорииНовостей);
			ИначеЕсли ТипЗнч(ТекущаяКатегория.ЗначениеКатегорииНовостей) = Тип("СправочникСсылка.ЗначенияКатегорийНовостей") Тогда
				// Для быстрых баз передавать уникальный идентификатор, так как внутреннее общение происходит по идентификаторам.
				ОбъектХДТО_Категория_Простая.categoryValue = Строка(ТекущаяКатегория.ЗначениеКатегорииНовостей.УникальныйИдентификатор());
			Иначе
				// Неопределенная категория
				ОбъектХДТО_Категория_Простая.Сбросить("categoryValue");
			КонецЕсли;
			ОбъектХДТО_Категория_Простая.condition = ТекущаяКатегория.УсловиеОтбора;
			ОбъектХДТО_Категория_Простая.description = ОбработкаНовостей.ПолучитьПредставлениеКатегорииИЗначения(
				ТекущаяКатегория.КатегорияНовостей,
				ТекущаяКатегория.ЗначениеКатегорииНовостей);
			СписокКатегорий_ПростоеУсловие.Добавить(ОбъектХДТО_Категория_Простая);
		КонецЦикла;
	КонецЕсли;

	//   КатегорииНовостей (интервалы версий)
	Если ЭтотОбъект.КатегорииИнтервалыВерсий.Количество() > 0 Тогда
		// Все необходимые свойства ХДТО
		// Интервалы версий
		СвойствоКатегорииИнтервалыВерсий = ОбъектХДТО.Свойства().Получить("categoriesVersions1C");
		СвойствоКатегорияИнтервалВерсий = СвойствоКатегорииИнтервалыВерсий.Тип.Свойства.Получить("categoryVersions1C");
		// Список категорий categories1C/category1C и categoriesVersions1C/categoryVersions1C
		ОбъектХДТО.Установить(СвойствоКатегорииИнтервалыВерсий, ФабрикаХДТО.Создать(СвойствоКатегорииИнтервалыВерсий.Тип));
		СписокКатегорий_ИнтервалВерсий = ОбъектХДТО.categoriesVersions1C.ПолучитьСписок(СвойствоКатегорияИнтервалВерсий);
		Для каждого ТекущаяКатегория Из ЭтотОбъект.КатегорииИнтервалыВерсий Цикл
			// Список категорий "Интервал версий"
			ОбъектХДТО_Категория_ИнтервалВерсий = ФабрикаХДТО.Создать(СвойствоКатегорияИнтервалВерсий.Тип);
			ОбъектХДТО_Категория_ИнтервалВерсий.categoryGuid = Строка(ТекущаяКатегория.КатегорияНовостей.УникальныйИдентификатор());
			ОбъектХДТО_Категория_ИнтервалВерсий.categoryCode = СокрЛП(СтрЗаменить(ТекущаяКатегория.КатегорияНовостей.Код, "  ", " ")); // Код не должен быть пустой.
			ОбъектХДТО_Категория_ИнтервалВерсий.productCode  = СокрЛП(СтрЗаменить(ТекущаяКатегория.Продукт, "  ", " "));
			ОбъектХДТО_Категория_ИнтервалВерсий.versionFrom  = СокрЛП(ТекущаяКатегория.ВерсияОТ);
			ОбъектХДТО_Категория_ИнтервалВерсий.versionTo    = СокрЛП(ТекущаяКатегория.ВерсияДО);
			// Элемент справочника "ИнтервалыВерсий" может быть еще не создан, для импорта это поле не нужно,
			//  поэтому можно просто вывести пустое значение.
			ОбъектХДТО_Категория_ИнтервалВерсий.description  = "";
			СписокКатегорий_ИнтервалВерсий.Добавить(ОбъектХДТО_Категория_ИнтервалВерсий);
		КонецЦикла;
	КонецЕсли;

	ПредставлениеНовостиХМЛ = ИнтернетПоддержкаПользователейКлиентСервер.ПредставлениеОбъектаХДТО(ОбъектХДТО, ФабрикаХДТО);

	// Добавить описание XML
	ПредставлениеНовостиХМЛ = 
		"<?xml version=""1.0"" encoding=""UTF-8""?>"
		+ Символы.ПС
		+ СтрШаблон(
			НСтр("ru='<!--
				|	Дата выгрузки: %1
				|	Оператор: %2
				|	База: %3
				|-->
				|'"),
			Формат(ТекущаяДатаСеанса(), "ДЛФ=DT"),
			Пользователи.АвторизованныйПользователь(),
			СтрокаСоединенияИнформационнойБазы()
		)
		+ ПредставлениеНовостиХМЛ;

	Возврат ПредставлениеНовостиХМЛ;

КонецФункции

#КонецОбласти

#КонецОбласти
