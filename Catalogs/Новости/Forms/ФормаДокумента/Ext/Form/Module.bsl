				Если Найти(ВРег(Источник.КлючОбъекта), ВРег("Документы.Новости.")) = 1 Тогда
					лкТекущийБуферОбмена = Прав(Источник.КлючОбъекта, СтрДлина(Источник.КлючОбъекта) - СтрДлина("Документы.Новости."));
