//                               Для неинтерактивного режима выбранное имя файла соответствует начальному имени файла.
//                               В режиме запуска "Веб-клиент" значение параметра зависит от типа браузера.
//  ДополнительныеПараметры - Произвольный - значение, которое было указано при создании объекта ОписаниеОповещения.
//
&НаКлиенте
Процедура ПослеЗагрузкиВнедреннойКартинки(Результат, АдресВХранилище, ВыбранноеИмяФайла, ДополнительныеПараметры) Экспорт

	Если Результат = Истина Тогда
		лкДвоичныеДанныеФайла = ПолучитьИзВременногоХранилища(АдресВХранилище);
		лкДанныеФайлаСтрока64 = base64Строка(лкДвоичныеДанныеФайла);
		лкДанныеФайлаСтрока64 = СтрЗаменить(base64Строка(лкДвоичныеДанныеФайла), Символы.ПС, ""); // Иначе картинка не отобразится

		// 2. Вставить код
		Если Элементы.СтраницыТексты.ТекущаяСтраница = Элементы.СтраницаПростоТекстДля1С Тогда
			ПолеТекстовогоДокумента = Элементы.ТекстНовостиДля1С;
		ИначеЕсли Элементы.СтраницыТексты.ТекущаяСтраница = Элементы.СтраницаПростоТекстДляВнешнихИсточников Тогда
			ПолеТекстовогоДокумента = Элементы.ТекстНовостиДляВнешнихИсточников;
		КонецЕсли;
		НачалоСтроки  = 0;
		НачалоКолонки = 0;
		КонецСтроки   = 0;
		КонецКолонки  = 0;
		ПолеТекстовогоДокумента.ПолучитьГраницыВыделения(НачалоСтроки, НачалоКолонки, КонецСтроки, КонецКолонки);
		ТекстДляВставки = "<img src=""%ДанныеКартинки%"" />";

		ТекстДляВставки = СтрЗаменить(ТекстДляВставки, "%ДанныеКартинки%", "data:image/" + ДополнительныеПараметры.ФорматКартинки + ";base64," + лкДанныеФайлаСтрока64);

		ПолеТекстовогоДокумента.ВыделенныйТекст = ТекстДляВставки;
		ПолеТекстовогоДокумента.УстановитьГраницыВыделения(НачалоСтроки, НачалоКолонки, НачалоСтроки, НачалоКолонки);
	КонецЕсли;

КонецПроцедуры

#Область ИмпортЭкспорт

&НаКлиенте
Процедура ИмпортОбъектаИзXML(Результат, ДополнительныеПараметры = Неопределено) Экспорт

	ТипСтрока = Тип("Строка");

	Если ТипЗнч(Результат) = ТипСтрока Тогда
		Если НЕ ПустаяСтрока(Результат) Тогда
			// Дополнительный вопрос задавать не будем, т.к. предупреждение красным цветом было в форме импорта.
			ИмпортОбъектаИзXMLНаСервере(Результат, ДополнительныеПараметры);
		КонецЕсли;
	КонецЕсли;

КонецПроцедуры

&НаСервере
Процедура ИмпортОбъектаИзXMLНаСервере(Результат, ДополнительныеПараметры = Неопределено)

	ЧтениеХМЛ = Новый ЧтениеXML;
	ЧтениеХМЛ.УстановитьСтроку(
		Результат,
		Новый ПараметрыЧтенияXML(
			, // Версия,
			, // Язык
			, // ПробельныеСимволы
			, // ТипПроверкиПравильности
			Истина, // ИгнорироватьОбъявлениеXML
			Истина, // ИгнорироватьТипДокумента
			Истина, // ИгнорироватьИнструкцииОбработки
			Истина, // ИгнорироватьКомментарии
			, // ИгнорироватьПробельныеСимволы
			Истина, // СекцииCDATAКакТекст
		) // ИспользоватьИгнорируемыеПробельныеСимволы
	);

	ФабрикаХДТО = ФабрикаXDTO;

	ХМЛТип = ПолучитьXMLТип(ЧтениеХМЛ);
	Если ХМЛТип.ИмяТипа = "newsType_ModelBaseExchange" Тогда
		// Нетипизированное чтение.
		ОбъектХДТО = ФабрикаХДТО.ПрочитатьXML(ЧтениеХМЛ);

		// Некоторые свойства не трогать:
		// - Объект.ПометкаУдаления = ОбъектХДТО.DeletionMark;
		// - Объект.Проведен = НЕ ОбъектХДТО.isDraft;
		// - Объект.ТематическаяПодборка = ... // ОбъектХДТО.relatedChannelsSetRef.guid/Code;
		// - Объект.Комментарий = ОбъектХДТО.comment.

		// Шапка документа
		ВсеСвойстваХДТО = ОбъектХДТО.Свойства();

		ЗаполняемыеСвойства = Новый Соответствие;
		ЗаполняемыеСвойства.Вставить("ДатаПубликации", "modificationDate"); // Или publishDate.
		ЗаполняемыеСвойства.Вставить("ДатаЗавершения", "expireDate");
		ЗаполняемыеСвойства.Вставить("Наименование", "title");
		ЗаполняемыеСвойства.Вставить("Подзаголовок", "subtitle");
		ЗаполняемыеСвойства.Вставить("СсылкаНаПолныйТекстНовости", "link");
		ЗаполняемыеСвойства.Вставить("СкрыватьВОбщемСпискеНовостей", "hideInList");
		ЗаполняемыеСвойства.Вставить("Важность", "priority");
		ЗаполняемыеСвойства.Вставить("ДатаСбросаВажности", "priorityExpired");
		ЗаполняемыеСвойства.Вставить("АвтоСбросНапоминанияПриПрочтении", "autoMarkAsRead");
		ЗаполняемыеСвойства.Вставить("ПриОткрытииСразуПереходитьПоСсылке", "autoOpenLink");
		ЗаполняемыеСвойства.Вставить("ТекстНовостиДляВнешнихИсточников", "content");
		ЗаполняемыеСвойства.Вставить("ТекстНовости", "content1C");
		Для Каждого ТекущаяПара Из ЗаполняемыеСвойства Цикл
			ТекущаяПараИмяСвойстваХДТО = ВсеСвойстваХДТО.Получить(ТекущаяПара.Значение);
			Если ТекущаяПараИмяСвойстваХДТО <> Неопределено Тогда
				// Пустые атрибуты всегда передаются в виде пустой строки.
				// Пустые элементы будут получены как ОбъектXDTO, где ОбъектХДТО..Последовательность().Количество() = 0.
				ЗначениеХДТО = ОбъектХДТО.Получить(ТекущаяПараИмяСвойстваХДТО);
				Если (ТипЗнч(ЗначениеХДТО) = Тип("ОбъектXDTO")) И (ЗначениеХДТО.Последовательность().Количество() = 0) Тогда
					Объект[ТекущаяПара.Ключ] = "";
				Иначе
					Объект[ТекущаяПара.Ключ] = XMLЗначение(ТипЗнч(Объект[ТекущаяПара.Ключ]), ЗначениеХДТО);
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;

		// Преобразовать все даты в GMT.
		// Даты хранятся в GMT, но редактируются по местному времени.
		ЭтотОбъект.ДатаПубликацииМестная     = ?(Объект.ДатаПубликации     = '00010101', '00010101', МестноеВремя(Объект.ДатаПубликации, ЧасовойПояс()));
		ЭтотОбъект.ДатаЗавершенияМестная     = ?(Объект.ДатаЗавершения     = '00010101', '00010101', МестноеВремя(Объект.ДатаЗавершения, ЧасовойПояс()));
		ЭтотОбъект.ДатаСбросаВажностиМестная = ?(Объект.ДатаСбросаВажности = '00010101', '00010101', МестноеВремя(Объект.ДатаСбросаВажности, ЧасовойПояс()));

		// Табличные части:
		//   Действия
		//   ПараметрыДействий
		Объект.Действия.Очистить();
		Объект.ПараметрыДействий.Очистить();
		СвойствоДействия = ОбъектХДТО.Свойства().Получить("actions1C");
		Если СвойствоДействия <> Неопределено Тогда
			ДействияХДТО = ОбъектХДТО.Получить("actions1C");
			СвойствоСписокДействий = ДействияХДТО.Свойства().Получить("action1C");
			Если СвойствоСписокДействий <> Неопределено Тогда
				МассивОбъектовХДТО = Новый Массив;
				// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
				// Проверить можно только по свойству ВерхняяГраница.
				Если СвойствоСписокДействий.ВерхняяГраница = 1 Тогда
					ТекущееДействиеХДТО = ДействияХДТО.Получить(СвойствоСписокДействий);
					МассивОбъектовХДТО.Добавить(ТекущееДействиеХДТО);
				ИначеЕсли (СвойствоСписокДействий.ВерхняяГраница = -1)
						ИЛИ (СвойствоСписокДействий.ВерхняяГраница > 1) Тогда
					СписокДействийХДТО = ДействияХДТО.ПолучитьСписок(СвойствоСписокДействий);
					Для каждого ТекущееДействиеХДТО Из СписокДействийХДТО Цикл
						МассивОбъектовХДТО.Добавить(ТекущееДействиеХДТО);
					КонецЦикла;
				КонецЕсли;
				Для Каждого ТекущееДействиеХДТО Из МассивОбъектовХДТО Цикл
					ИмпортОбъектаИзXMLНаСервере_Действие(ТекущееДействиеХДТО);
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;

		ЗаполнитьДобавленныеКолонкиТаблиц("Действия");

		//   БинарныеДанные
		Объект.БинарныеДанные.Очистить();
		СвойствоБинарныеДанные = ОбъектХДТО.Свойства().Получить("binaryDataList1C");
		Если СвойствоБинарныеДанные <> Неопределено Тогда
			БинарныеДанныеХДТО = ОбъектХДТО.Получить("binaryDataList1C");
			СвойствоСписокБинарныхДанных = БинарныеДанныеХДТО.Свойства().Получить("binaryData1C");
			Если СвойствоСписокБинарныхДанных <> Неопределено Тогда
				МассивОбъектовХДТО = Новый Массив;
				// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
				// Проверить можно только по свойству ВерхняяГраница.
				Если СвойствоСписокБинарныхДанных.ВерхняяГраница = 1 Тогда
					ТекущиеБинарныеДанныеХДТО = БинарныеДанныеХДТО.Получить(СвойствоСписокБинарныхДанных);
					МассивОбъектовХДТО.Добавить(ТекущиеБинарныеДанныеХДТО);
				ИначеЕсли (СвойствоСписокБинарныхДанных.ВерхняяГраница = -1)
						ИЛИ (СвойствоСписокБинарныхДанных.ВерхняяГраница > 1) Тогда
					СписокБинарныхДанныхХДТО = БинарныеДанныеХДТО.ПолучитьСписок(СвойствоСписокБинарныхДанных);
					Для каждого ТекущиеБинарныеДанныеХДТО Из СписокБинарныхДанныхХДТО Цикл
						МассивОбъектовХДТО.Добавить(ТекущиеБинарныеДанныеХДТО);
					КонецЦикла;
				КонецЕсли;
				Для Каждого ТекущиеБинарныеДанныеХДТО Из МассивОбъектовХДТО Цикл
					НоваяСтрока = Объект.БинарныеДанные.Добавить();
					НоваяСтрока.УИН       = ТекущиеБинарныеДанныеХДТО.id;
					НоваяСтрока.Заголовок = ТекущиеБинарныеДанныеХДТО.title;
					// НоваяСтрока.Данные = // Двоичные данные не загружаются напрямую.
					НоваяСтрока.ИнтернетСсылка    = ТекущиеБинарныеДанныеХДТО.link;
					НоваяСтрока.ПорядокСортировки = ТекущиеБинарныеДанныеХДТО.order;
					НоваяСтрока.ДанныеСтрока64    = ТекущиеБинарныеДанныеХДТО.binaryData;
					Если НЕ ПустаяСтрока(НоваяСтрока.ДанныеСтрока64) Тогда
						ДвоичныеДанные = Base64Значение(НоваяСтрока.ДанныеСтрока64);
						НоваяСтрока.ДанныеРазмер = ДвоичныеДанные.Размер();
					Иначе
						НоваяСтрока.ДанныеРазмер = 0;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;

		//   ПривязкаКМетаданным
		Объект.ПривязкаКМетаданным.Очистить();
		СвойствоПривязкиКМетаданным = ОбъектХДТО.Свойства().Получить("metadataLinks1C");
		Если СвойствоПривязкиКМетаданным <> Неопределено Тогда
			ПривязкиКМетаданнымХДТО = ОбъектХДТО.Получить("metadataLinks1C");
			СвойствоСписокПривязокКМетаданным = ПривязкиКМетаданнымХДТО.Свойства().Получить("metadataLink1C");
			Если СвойствоСписокПривязокКМетаданным <> Неопределено Тогда
				МассивОбъектовХДТО = Новый Массив;
				// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
				// Проверить можно только по свойству ВерхняяГраница.
				Если СвойствоСписокПривязокКМетаданным.ВерхняяГраница = 1 Тогда
					ТекущаяПривязкаКМетаданнымХДТО = ПривязкиКМетаданнымХДТО.Получить(СвойствоСписокПривязокКМетаданным);
					МассивОбъектовХДТО.Добавить(ТекущаяПривязкаКМетаданнымХДТО);
				ИначеЕсли (СвойствоСписокПривязокКМетаданным.ВерхняяГраница = -1)
						ИЛИ (СвойствоСписокПривязокКМетаданным.ВерхняяГраница > 1) Тогда
					СписокБинарныхДанныхХДТО = ПривязкиКМетаданнымХДТО.ПолучитьСписок(СвойствоСписокПривязокКМетаданным);
					Для каждого ТекущаяПривязкаКМетаданнымХДТО Из СписокБинарныхДанныхХДТО Цикл
						МассивОбъектовХДТО.Добавить(ТекущаяПривязкаКМетаданнымХДТО);
					КонецЦикла;
				КонецЕсли;
				Для каждого ТекущаяПривязкаКМетаданнымХДТО Из МассивОбъектовХДТО Цикл
					НоваяСтрока = Объект.ПривязкаКМетаданным.Добавить();
					НоваяСтрока.Метаданные              = ТекущаяПривязкаКМетаданнымХДТО.metadataName;
					НоваяСтрока.Форма                   = ТекущаяПривязкаКМетаданнымХДТО.formName;
					НоваяСтрока.Событие                 = ТекущаяПривязкаКМетаданнымХДТО.eventName;
					НоваяСтрока.ПоказыватьВФормеОбъекта = XMLЗначение(Тип("Булево"), ТекущаяПривязкаКМетаданнымХДТО.openWithinOwnerForm);
					НоваяСтрока.Важность                = XMLЗначение(Тип("Число"), ТекущаяПривязкаКМетаданнымХДТО.priority);
					// Здесь ДатаСбросаВажности и ДатаСбросаВажностиМестная - две разные колонки.
					НоваяСтрока.ДатаСбросаВажности      = XMLЗначение(Тип("Дата"), ТекущаяПривязкаКМетаданнымХДТО.priorityExpired);
					НоваяСтрока.ДатаСбросаВажностиМестная = ?( // Дата отображается и редактируется в местном времени, а при записи преобразуется в универсальное.
						НоваяСтрока.ДатаСбросаВажности = '00010101',
						'00010101',
						МестноеВремя(XMLЗначение(Тип("Дата"), ТекущаяПривязкаКМетаданнымХДТО.priorityExpired), ЧасовойПояс()));
					НоваяСтрока.ЭтоПостояннаяНовость    = XMLЗначение(Тип("Булево"), ТекущаяПривязкаКМетаданнымХДТО.isPinned);
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;

		ЗаполнитьДобавленныеКолонкиТаблиц("ПривязкаКМетаданным");

		//   КатегорииНовостей (простые условия)
		ЭтотОбъект.КатегорииПростые.Очистить();
		СвойствоКатегорииПростые = ОбъектХДТО.Свойства().Получить("categories1C");
		Если СвойствоКатегорииПростые <> Неопределено Тогда
			КатегорииПростыеХДТО = ОбъектХДТО.Получить("categories1C");
			СвойствоСписокКатегорийПростых = КатегорииПростыеХДТО.Свойства().Получить("category1C");
			Если СвойствоСписокКатегорийПростых <> Неопределено Тогда
				МассивОбъектовХДТО = Новый Массив;
				// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
				// Проверить можно только по свойству ВерхняяГраница.
				Если СвойствоСписокКатегорийПростых.ВерхняяГраница = 1 Тогда
					ТекущаяКатегорияПростаяХДТО = КатегорииПростыеХДТО.Получить(СвойствоСписокКатегорийПростых);
					МассивОбъектовХДТО.Добавить(ТекущаяКатегорияПростаяХДТО);
				ИначеЕсли (СвойствоСписокКатегорийПростых.ВерхняяГраница = -1)
						ИЛИ (СвойствоСписокКатегорийПростых.ВерхняяГраница > 1) Тогда
					СписокКатегорийПростыхХДТО = КатегорииПростыеХДТО.ПолучитьСписок(СвойствоСписокКатегорийПростых);
					Для каждого ТекущаяКатегорияПростаяХДТО Из СписокКатегорийПростыхХДТО Цикл
						МассивОбъектовХДТО.Добавить(ТекущаяКатегорияПростаяХДТО);
					КонецЦикла;
				КонецЕсли;
				Для каждого ТекущаяКатегорияПростаяХДТО Из СписокКатегорийПростыхХДТО Цикл
					// Добавляются все категории, без проверки - доступна ли такая категория для тематической подборки.
					// Всегда искать по коду, без УИН.
					// Попробовать найти по коду, т.к. между эталонной и этой базами доступен только Код.
					КодКатегории = ТекущаяКатегорияПростаяХДТО.categoryCode;
					НайденнаяКатегория = ПланыВидовХарактеристик.КатегорииНовостей.НайтиПоКоду(КодКатегории);
					Если НайденнаяКатегория.Пустая() Тогда
						ТекстСообщения = НСтр("ru='Категория (простая) с УИН %УИН% и кодом %Код% не найдена.'");
						ТекстСообщения = СтрЗаменить(ТекстСообщения, "%УИН%", ТекущаяКатегорияПростаяХДТО.categoryGuid);
						ТекстСообщения = СтрЗаменить(ТекстСообщения, "%Код%", ТекущаяКатегорияПростаяХДТО.categoryCode);
						Сообщение = Новый СообщениеПользователю();
						Сообщение.Текст = ТекстСообщения;
						Сообщение.Поле  = "КатегорииПростые";
						Сообщение.УстановитьДанные(ЭтотОбъект);
						Сообщение.Сообщить();
					Иначе
						НоваяСтрока = ЭтотОбъект.КатегорииПростые.Добавить();
						НоваяСтрока.КатегорияНовостей = НайденнаяКатегория;
						НоваяСтрока.УсловиеОтбора     = ТекущаяКатегорияПростаяХДТО.condition;
						// Значение заполняется в зависимости от типа категории.
						Если НайденнаяКатегория.ТипЗначения.СодержитТип(Тип("СправочникСсылка.ЗначенияКатегорийНовостей")) Тогда
							УИНЗначенияКатегории = Новый УникальныйИдентификатор(ТекущаяКатегорияПростаяХДТО.categoryValue);
							НоваяСтрока.ЗначениеКатегорииНовостей = Справочники.ЗначенияКатегорийНовостей.ПолучитьСсылку(УИНЗначенияКатегории);
						Иначе
							НоваяСтрока.ЗначениеКатегорииНовостей = XMLЗначение(
								НайденнаяКатегория.ТипЗначения.Типы()[0],
								ТекущаяКатегорияПростаяХДТО.categoryValue);
						КонецЕсли;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;

		//   КатегорииНовостей (интервалы версий)
		ЭтотОбъект.КатегорииИнтервалыВерсий.Очистить();
		СвойствоКатегорииИнтервалыВерсий = ОбъектХДТО.Свойства().Получить("categoriesVersions1C");
		Если СвойствоКатегорииИнтервалыВерсий <> Неопределено Тогда
			КатегорииИнтервалыВерсийХДТО = ОбъектХДТО.Получить("categoriesVersions1C");
			СвойствоСписокКатегорийИнтервалыВерсий = КатегорииИнтервалыВерсийХДТО.Свойства().Получить("categoryVersions1C");
			Если СвойствоСписокКатегорийИнтервалыВерсий <> Неопределено Тогда
				МассивОбъектовХДТО = Новый Массив;
				// Т.к. мы прочитали нетипизированный объект, то 1С не знает - это список или объект.
				// Проверить можно только по свойству ВерхняяГраница.
				Если СвойствоСписокКатегорийИнтервалыВерсий.ВерхняяГраница = 1 Тогда
					ТекущаяКатегорияИнтервалыВерсийХДТО = КатегорииИнтервалыВерсийХДТО.Получить(СвойствоСписокКатегорийИнтервалыВерсий);
					МассивОбъектовХДТО.Добавить(ТекущаяКатегорияИнтервалыВерсийХДТО);
				ИначеЕсли (СвойствоСписокКатегорийИнтервалыВерсий.ВерхняяГраница = -1)
						ИЛИ (СвойствоСписокКатегорийИнтервалыВерсий.ВерхняяГраница > 1) Тогда
					СписокКатегорийПростыхХДТО = КатегорииИнтервалыВерсийХДТО.ПолучитьСписок(СвойствоСписокКатегорийИнтервалыВерсий);
					Для каждого ТекущаяКатегорияИнтервалыВерсийХДТО Из СписокКатегорийПростыхХДТО Цикл
						МассивОбъектовХДТО.Добавить(ТекущаяКатегорияИнтервалыВерсийХДТО);
					КонецЦикла;
				КонецЕсли;
				Для каждого ТекущаяКатегорияИнтервалыВерсийХДТО Из СписокКатегорийПростыхХДТО Цикл
					// Добавляются все категории, без проверки - доступна ли такая категория для тематической подборки.
					// Всегда искать по коду, без УИН.
					// Попробовать найти по коду, т.к. между эталонной и этой базами доступен только Код.
					КодКатегории = ТекущаяКатегорияИнтервалыВерсийХДТО.categoryCode;
					НайденнаяКатегория = ПланыВидовХарактеристик.КатегорииНовостей.НайтиПоКоду(КодКатегории);
					Если НайденнаяКатегория.Пустая() Тогда
						ТекстСообщения = НСтр("ru='Категория (интервал версий) с УИН %УИН% и кодом %Код% не найдена.'");
						ТекстСообщения = СтрЗаменить(ТекстСообщения, "%УИН%", ТекущаяКатегорияИнтервалыВерсийХДТО.categoryGuid);
						ТекстСообщения = СтрЗаменить(ТекстСообщения, "%Код%", ТекущаяКатегорияИнтервалыВерсийХДТО.categoryCode);
						Сообщение = Новый СообщениеПользователю();
						Сообщение.Текст = ТекстСообщения;
						Сообщение.Поле  = "КатегорииИнтервалыВерсий";
						Сообщение.УстановитьДанные(ЭтотОбъект);
						Сообщение.Сообщить();
					Иначе
						НоваяСтрока = ЭтотОбъект.КатегорииИнтервалыВерсий.Добавить();
						НоваяСтрока.КатегорияНовостей = НайденнаяКатегория;
						НоваяСтрока.Продукт           = ТекущаяКатегорияИнтервалыВерсийХДТО.productCode;
						НоваяСтрока.ВерсияОТ          = ТекущаяКатегорияИнтервалыВерсийХДТО.versionFrom;
						НоваяСтрока.ВерсияДО          = ТекущаяКатегорияИнтервалыВерсийХДТО.versionTo;
						НоваяСтрока.ПредставлениеИнтервалаВерсий =
							ИнтернетПоддержкаПользователейКлиентСервер.ПользовательскоеПредставлениеИнтервалаВерсий(
								НоваяСтрока.ВерсияОТ,
								НоваяСтрока.ВерсияДО);
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;

		// Возможно, некоторые поля надо заблокировать / разблокировать.
		УправлениеФормой(ЭтотОбъект);

	КонецЕсли;

	ЧтениеХМЛ.Закрыть();

КонецПроцедуры

