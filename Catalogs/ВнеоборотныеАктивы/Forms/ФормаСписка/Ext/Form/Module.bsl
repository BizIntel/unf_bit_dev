	Организация = Настройки.Получить("Организация");
	Состояние = Настройки.Получить("Состояние");
	
	УправлениеНебольшойФирмойКлиентСервер.УстановитьЭлементОтбораСписка(Список, "Организация", Организация, ЗначениеЗаполнено(Организация));
	УправлениеНебольшойФирмойКлиентСервер.УстановитьЭлементОтбораСписка(Список, "Состояние", Состояние, ЗначениеЗаполнено(Состояние));
	
